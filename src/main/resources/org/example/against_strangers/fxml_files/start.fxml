      <Label layoutX="53.0" layoutY="47.0" text="Against Strangers!" textFill="#ffb6b6">
         <font>
            <Font name="MV Boli" size="40.0" />
         </font>
      </Label>
      <Button fx:id="startBtn" layoutX="158.0" layoutY="169.0" mnemonicParsing="false" onAction="#startGame" prefHeight="48.0" prefWidth="135.0" style="-fx-background-color: #50C878;" text="Start!" textFill="WHITE">
