<AnchorPane id="pane" prefHeight="462.0" prefWidth="453.0" stylesheets="@startStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.against_strangers.StartController">
