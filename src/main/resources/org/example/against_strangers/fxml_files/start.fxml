            <Font name="Verdana" size="25.0" />
         </font>
         <effect>
            <Lighting diffuseConstant="1.29" specularConstant="0.61" specularExponent="14.5" surfaceScale="0.86">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </Button>
      <Button layoutX="173.0" layoutY="231.0" mnemonicParsing="false" onAction="#guides" prefHeight="52.0" prefWidth="106.0" style="-fx-background-color: #50C878;" text="Guide" textFill="WHITE">
