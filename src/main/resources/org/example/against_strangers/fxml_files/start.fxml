            <Lighting diffuseConstant="1.29" specularConstant="0.61" specularExponent="14.5" surfaceScale="0.86">
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
